generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id         Int       @id @default(autoincrement())
  userId    Int @map("user_id")
  eventType String    @db.VarChar(100) @map("event_type")
  eventDate DateTime  @db.Date @map("event_date")
  nextReminderAt DateTime @db.Timestamptz(6) @map("next_reminder_at")
  createdAt DateTime  @default(now()) @db.Timestamptz(6) @map("created_at")
  updatedAt DateTime  @updatedAt @db.Timestamptz(6) @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("events")
}

model User {
  id         Int       @id @default(autoincrement())
  firstName String    @db.VarChar(50) @map("first_name")
  lastName  String    @db.VarChar(50) @map("last_name")
  email      String    @unique() @db.VarChar(255)
  timezone   String
  createdAt DateTime  @default(now()) @db.Timestamptz(6) @map("created_at")
  updatedAt DateTime  @updatedAt @db.Timestamptz(6) @map("updated_at")
  events     Event[]

  @@map("users")
}
